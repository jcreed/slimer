%div.login
  %h2 Log in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email", class: 'special' }
      = f.input :password,
        required: false,
        input_html: { autocomplete: "current-password", class: 'special' }
      = f.input :remember_me,
        label_html: { class: 'special_label' },
        input_html: { class: 'special_checkbox' },
        as: :boolean if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Log in"
  = render "users/shared/links"
